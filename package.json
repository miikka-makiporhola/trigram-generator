{
  "name": "@miikka_makiporhola/trigram-generator",
  "version": "0.1.0",
  "description": "Build a trigram language model from text and generate deterministic or random output.",
  "keywords": [
    "trigram",
    "markov-chain",
    "language-model",
    "text-generation",
    "typescript"
  ],
  "homepage": "https://github.com/miikka-makiporhola/trigram-generator#readme",
  "bugs": {
    "url": "https://github.com/miikka-makiporhola/trigram-generator/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/miikka-makiporhola/trigram-generator.git"
  },
  "license": "MIT",
  "type": "module",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "browser": {
        "import": "./dist/index.js",
        "require": "./dist/index.cjs"
      },
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "clean": "rimraf dist",
    "build:js": "tsup",
    "build:types": "tsc -p tsconfig.build.json",
    "build": "npm run clean && npm run build:js && npm run build:types",
    "lint": "eslint \"src/**/*.ts\" --max-warnings=0",
    "lint:fix": "npm run lint -- --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "prepublishOnly": "npm run lint && npm run typecheck && npm run test && npm run build",
    "release": "npm run prepublishOnly && npm publish --ignore-scripts"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/node": "^25.3.2",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.0.0",
    "globals": "^16.0.0",
    "prettier": "^3.0.0",
    "rimraf": "^6.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^3.0.0"
  }
}
